meta:
  id: frontend_structure
  title: 前端页面结构规范
  type: structure
  platform: flutter
  target: cursor_ui

structure:
  page_modules:
    - name: home
      dir: pages/home
      entry: page_home.dart
    - name: upload
      dir: pages/upload
      entry: page_upload.dart
    - name: result
      dir: pages/result
      entry: page_result.dart
    - name: profile
      dir: pages/profile
      entry: page_profile.dart
    - name: settings
      dir: pages/settings
      entry: page_settings.dart
    - name: share
      dir: pages/share
      entry: page_share.dart
    - name: invite
      dir: pages/invite
      entry: page_invite.dart

  component_modules:
    - name: avatar
      dir: components/avatar
    - name: banner
      dir: components/banner
    - name: result_card
      dir: components/result_card
    - name: upload_button
      dir: components/upload_button

  shared:
    - name: theme
      dir: shared/theme
    - name: utils
      dir: shared/utils
    - name: routes
      dir: shared/routes
